<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/layout_width_five"
            android:layout_height="@dimen/layout_height_twenty"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/layout_margin_top_ten"
            android:background="@color/colorBlue" />

        <TextView
            android:id="@+id/fragment_choiceDailyTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/layout_margin_start_ten"
            android:text="@string/test"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/fragment_choiceDailyMoreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/layout_margin_end_ten"
            android:text="@string/more"
            android:textSize="@dimen/text_size_ten" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin_end_ten"
        android:layout_marginStart="@dimen/layout_margin_start_ten"
        android:layout_marginTop="@dimen/layout_margin_top_five">

        <ImageView
            android:id="@+id/fragment_choiceDailyBigPictureIv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_one_hundred_and_seventy"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/fragment_choiceDailyBigPictureTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_choiceDailyBigPictureIv"
            android:layout_marginBottom="@dimen/layout_margin_bottom_five"
            android:layout_marginEnd="@dimen/layout_margin_end_forty"
            android:layout_marginStart="@dimen/layout_margin_start_ten"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/test"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/fragment_choiceDailyBigPictureTimeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fragment_choiceDailyBigPictureIv"
            android:layout_alignRight="@+id/fragment_choiceDailyBigPictureIv"
            android:layout_marginBottom="@dimen/layout_margin_bottom_five"
            android:layout_marginEnd="@dimen/layout_margin_end_five"
            android:background="@drawable/time_shape"
            android:text="@string/test"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_ten" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/layout_margin_end_ten"
        android:layout_marginStart="@dimen/layout_margin_start_ten"
        android:layout_marginTop="@dimen/layout_margin_top_ten"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fragment_choiceDailySecondPictureFirstIv"
                android:layout_width="@dimen/layout_width_one_hundred_and_seventy_five"
                android:layout_height="@dimen/layout_height_one_hundred"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/fragment_choiceDailySecondPictureFirstTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fragment_choiceDailySecondPictureFirstIv"
                android:layout_alignRight="@+id/fragment_choiceDailySecondPictureFirstIv"
                android:layout_marginBottom="@dimen/layout_margin_bottom_five"
                android:layout_marginEnd="@dimen/layout_margin_end_five"
                android:background="@drawable/time_shape"
                android:text="@string/test"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_ten" />

            <TextView
                android:id="@+id/fragment_choiceDailySecondPictureFirstTitleTv"
                android:layout_width="@dimen/layout_width_one_hundred_and_fifty"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_choiceDailySecondPictureFirstIv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/layout_margin_top_five"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/test"
                android:textSize="@dimen/text_size_fifteen"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_start_fifteen">

            <ImageView
                android:id="@+id/fragment_choiceDailySecondPictureSecondIv"
                android:layout_width="@dimen/layout_width_one_hundred_and_seventy_five"
                android:layout_height="@dimen/layout_height_one_hundred"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/fragment_choiceDailySecondPictureSecondTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fragment_choiceDailySecondPictureSecondIv"
                android:layout_alignRight="@+id/fragment_choiceDailySecondPictureSecondIv"
                android:layout_marginBottom="@dimen/layout_margin_bottom_five"
                android:layout_marginEnd="@dimen/layout_margin_end_five"
                android:background="@drawable/time_shape"
                android:text="@string/test"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_ten" />

            <TextView
                android:id="@+id/fragment_choiceDailySecondPictureSecondTitleTv"
                android:layout_width="@dimen/layout_width_one_hundred_and_fifty"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_choiceDailySecondPictureSecondIv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/layout_margin_top_five"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/test"
                android:textSize="@dimen/text_size_fifteen"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>