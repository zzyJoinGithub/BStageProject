<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightGrey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/layout_margin_bottom_five"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/layout_margin_top_five"
            android:text="@string/recommendForYou"
            android:textSize="@dimen/text_size_fifteen" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_subscribeLv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_zero"
        android:layout_marginStart="@dimen/layout_margin_start_ten"
        android:layout_marginEnd="@dimen/layout_margin_end_ten"
        android:layout_weight="1" />
</LinearLayout>